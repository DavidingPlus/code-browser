<mbr r='TT_HoriHeader_::min_Left_Side_Bearing' o='128' t='FT_Short'/>
<mbr r='TT_HoriHeader_::min_Right_Side_Bearing' o='144' t='FT_Short'/>
<mbr r='TT_HoriHeader_::xMax_Extent' o='160' t='FT_Short'/>
<mbr r='TT_HoriHeader_::caret_Slope_Rise' o='176' t='FT_Short'/>
<mbr r='TT_HoriHeader_::caret_Slope_Run' o='192' t='FT_Short'/>
<mbr r='TT_HoriHeader_::caret_Offset' o='208' t='FT_Short'/>
<mbr r='TT_HoriHeader_::Reserved' o='224' t='FT_Short[4]'/>
<mbr r='TT_HoriHeader_::metric_Data_Format' o='288' t='FT_Short'/>
<mbr r='TT_HoriHeader_::number_Of_HMetrics' o='304' t='FT_UShort'/>
<mbr r='TT_HoriHeader_::long_metrics' o='320' t='void *'/>
