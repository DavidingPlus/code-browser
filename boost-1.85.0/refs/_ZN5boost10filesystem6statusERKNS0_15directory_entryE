<def f='boost-1.85.0/libs/filesystem/include/boost/filesystem/directory.hpp' l='477' ll='480' type='boost::filesystem::file_status boost::filesystem::status(const boost::filesystem::directory_entry &amp; e)'/>
<doc f='boost-1.85.0/libs/filesystem/include/boost/filesystem/directory.hpp' l='465'>//--------------------------------------------------------------------------------------//
//                                                                                      //
//                            directory_entry overloads                                 //
//                                                                                      //
//--------------------------------------------------------------------------------------//

//  Without these functions, calling (for example) &apos;is_directory&apos; with a &apos;directory_entry&apos; results in:
//  - a conversion to &apos;path&apos; using &apos;operator boost::filesystem::path const&amp;()&apos;,
//  - then a call to &apos;is_directory(path const&amp; p)&apos; which recomputes the status with &apos;detail::status(p)&apos;.
//
//  These functions avoid a costly recomputation of the status if one calls &apos;is_directory(e)&apos; instead of &apos;is_directory(e.status())&apos;</doc>
